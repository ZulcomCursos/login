<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>ZULCOM - Administrador - Detalle del Ticket #<%= ticket.ticketNumber %></title>
  <link rel="stylesheet" href="/css/navbar.css" />
  <link rel="stylesheet" href="/css/dashboard.css" />
  <link rel="stylesheet" href="/css/ver.css" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    rel="stylesheet"
  />
</head>
<body>
  <div class="dashboard-container">
    <%- include('../partials/navadministrador') %>

    <main class="main-content">
      <header class="content-header">
        <h1>PANEL ADMINISTRATIVO</h1>
        <div class="user-actions">
          <div>
            <a href="/auth/change-password">
              <img src="/img/logo-perfil.png" alt="Logo Perfil" class="img-perfil" />
            </a>
          </div>
          <% if (user && user.nombres && user.apellidos) { %>
            <span class="user-name">Administrador: <%= user.nombres %> <%= user.apellidos %></span>
          <% } %>
          <a
            href="/auth/logout"
            class="logout-btn"
            onclick="return confirm('¿Estás seguro de cerrar sesión?')"
            >Cerrar Sesión</a
          >
        </div>
      </header>

      <div class="dashboard-content">
        <div class="container my-5">
          <div class="row g-4">
            <!-- Información del Cliente -->
            <div class="col-lg-5">
              <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                  <h5 class="mb-0">
                    <i class="bi bi-person-circle me-2"></i> Información del Cliente
                  </h5>
                </div>
                <div class="card-body">
                  <% if (ticket.client) { %>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item d-flex align-items-center">
                        <i class="bi bi-person-fill me-3 fs-4 text-primary"></i>
                        <div>
                          <div class="fw-bold">Nombre</div>
                          <div><%= ticket.client.nombre %> <%= ticket.client.apellido %></div>
                        </div>
                      </li>
                      <li class="list-group-item d-flex align-items-center">
                        <i class="bi bi-credit-card-2-front-fill me-3 fs-4 text-primary"></i>
                        <div>
                          <div class="fw-bold">Cédula</div>
                          <div><%= ticket.client.cedula %></div>
                        </div>
                      </li>
                      <li class="list-group-item d-flex align-items-center">
                        <i class="bi bi-envelope-fill me-3 fs-4 text-primary"></i>
                        <div>
                          <div class="fw-bold">Correo</div>
                          <div><%= ticket.client.correo %></div>
                        </div>
                      </li>
                      <li class="list-group-item d-flex align-items-center">
                        <i class="bi bi-telephone-fill me-3 fs-4 text-primary"></i>
                        <div>
                          <div class="fw-bold">Teléfono 1</div>
                          <div><%= ticket.client.telefono1 %></div>
                        </div>
                      </li>
                      <% if (ticket.client.telefono2) { %>
                      <li class="list-group-item d-flex align-items-center">
                        <i class="bi bi-telephone-fill me-3 fs-4 text-primary"></i>
                        <div>
                          <div class="fw-bold">Teléfono 2</div>
                          <div><%= ticket.client.telefono2 %></div>
                        </div>
                      </li>
                      <% } %>
                      <li class="list-group-item d-flex align-items-center">
                        <i class="bi bi-geo-alt-fill me-3 fs-4 text-primary"></i>
                        <div>
                          <div class="fw-bold">Dirección</div>
                          <div><%= ticket.client.direccion %></div>
                        </div>
                      </li>
                      <li class="list-group-item d-flex align-items-center">
                        <i class="bi bi-building me-3 fs-4 text-primary"></i>
                        <div>
                          <div class="fw-bold">Ciudad</div>
                          <div><%= ticket.client.ciudad %></div>
                        </div>
                      </li>
                      <li class="list-group-item d-flex align-items-center">
                        <i class="bi bi-globe me-3 fs-4 text-primary"></i>
                        <div>
                          <div class="fw-bold">Provincia</div>
                          <div><%= ticket.client.provincia %></div>
                        </div>
                      </li>
                      <% if (ticket.client.referencias) { %>
                      <li class="list-group-item d-flex align-items-center">
                        <i class="bi bi-info-circle-fill me-3 fs-4 text-primary"></i>
                        <div>
                          <div class="fw-bold">Referencias</div>
                          <div><%= ticket.client.referencias %></div>
                        </div>
                      </li>
                      <% } %>
                    </ul>
                  <% } else { %>
                    <p class="text-danger">Cliente no asignado</p>
                  <% } %>
                </div>
              </div>
            </div>

            <!-- Información del Ticket -->
            <div class="col-lg-7">
              <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                  <h5 class="mb-0"><i class="bi bi-ticket-perforated-fill me-2"></i> Información del Ticket</h5>
                </div>
                <div class="card-body">
                  <dl class="row mb-3">
                    <dt class="col-sm-4 fw-semibold">Número de Ticket:</dt>
                    <dd class="col-sm-8"><%= ticket.ticketNumber %></dd>

                    <dt class="col-sm-4 fw-semibold">Tipo de problema:</dt>
                    <dd class="col-sm-8"><%= ticket.issueType %></dd>

                    <dt class="col-sm-4 fw-semibold">Estado:</dt>
                    <dd class="col-sm-8 text-capitalize">
                      <span
                        class="badge
                  <%= ticket.status === 'cerrado'
                    ? 'bg-success'
                    : ticket.status === 'en_proceso'
                    ? 'bg-primary'
                    : ticket.status === 'completado'
                    ? 'bg-secondary'
                    : ticket.status === 'abierto'
                    ? 'bg-light text-dark'
                    : 'bg-light text-dark' %>"
                      >
                        <%= ticket.status.replace('_', ' ') %>
                      </span>
                    </dd>

                    <dt class="col-sm-4 fw-semibold">Descripción:</dt>
                    <dd class="col-sm-8">
                      <pre class="mb-0" style="white-space: pre-wrap;"><%= ticket.description %></pre>
                    </dd>

                    <% if (ticket.solution) { %>
                    <dt class="col-sm-4 fw-semibold">Solución:</dt>
                    <dd class="col-sm-8">
                      <pre class="mb-0" style="white-space: pre-wrap;"><%= ticket.solution %></pre>
                    </dd>
                    <% } %>

                    <dt class="col-sm-4 fw-semibold">Fecha creación:</dt>
                    <dd class="col-sm-8"><%= new Date(ticket.createdAt).toLocaleString('es-EC') %></dd>

                    <% if (ticket.solutionDate) { %>
                    <dt class="col-sm-4 fw-semibold">Fecha de solución:</dt>
                    <dd class="col-sm-8"><%= new Date(ticket.solutionDate).toLocaleDateString('es-EC') %></dd>
                    <% } %>

                    <% if (ticket.solutionTime) { %>
                    <dt class="col-sm-4 fw-semibold">Hora de solución:</dt>
                    <dd class="col-sm-8"><%= ticket.solutionTime %></dd>
                    <% } %>

                    <% if (ticket.hora_visita) { %>
                    <dt class="col-sm-4 fw-semibold">Hora de visita técnica:</dt>
                    <dd class="col-sm-8"><%= ticket.hora_visita %></dd>
                    <% } %>

                    <% if (ticket.updatedAt) { %>
                    <dt class="col-sm-4 fw-semibold">Última actualización:</dt>
                    <dd class="col-sm-8"><%= new Date(ticket.updatedAt).toLocaleString('es-EC') %></dd>
                    <% } %>
                  </dl>

                  <!-- Botón volver al final 
                  <div class="text-end mt-4">
                    <a href="/tickets" class="btn btn-secondary">
                      <i class="bi bi-arrow-left"></i> Volver
                    </a>
                  </div>
                  -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</body>
</html>
