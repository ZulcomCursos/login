<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>ZULCOM - Administrador</title>
  <link rel="stylesheet" href="/css/dashboard/navbar.css" />
  <link rel="stylesheet" href="/css/dashboard/dashboard.css" />
<link rel="stylesheet" href="/css/tickets/tabla.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>
  <div class="dashboard-container">
    <%- include('../partials/navadministrador') %>
    
    <main class="main-content">
      <header class="content-header">
        <h1>PANEL ADMINISTRATIVO</h1>
        <div class="user-actions">
          <div>
            <a href="/auth/change-password">
              <img src="/img/logo-perfil.png" alt="Logo Perfil" class="img-perfil" />
            </a>
          </div>
          <% if (user && user.nombres && user.apellidos) { %>
            <span class="user-name">Administrador: <%= user.nombres %> <%= user.apellidos %> </span>
          <% } %>
          <a href="/auth/logout" class="logout-btn" onclick="return confirm('¿Estás seguro de cerrar sesión?')">Cerrar Sesión</a>
        </div>
      </header>

      <div class="dashboard-content">
        

        <!-- Filtro Avanzado -->
        <form id="filtroAvanzadoForm" class="row g-3 mb-4 px-3">
          <!-- Estado -->
          <div class="col-md-3">
            <label for="estadoFiltro" class="form-label">Estado</label>
            <select class="form-select" id="estadoFiltro" name="estado">
              <option value="" <%= estadoSeleccionado === '' ? 'selected' : '' %>>Todos</option>
              <option value="abierto" <%= estadoSeleccionado === 'abierto' ? 'selected' : '' %>>Abierto</option>
              <option value="completado" <%= estadoSeleccionado === 'completado' ? 'selected' : '' %>>Completado</option>
              <option value="cerrado" <%= estadoSeleccionado === 'cerrado' ? 'selected' : '' %>>Cerrado</option>
            </select>
          </div>

          <!-- Técnico -->
          <div class="col-md-3">
            <label for="tecnicoFiltro" class="form-label">Técnico</label>
            <select class="form-select" id="tecnicoFiltro" name="tecnico">
              <option value="">Todos</option>
              <% tecnicos.forEach(tecnico => { %>
                <option value="<%= tecnico.id %>" <%= tecnicoSeleccionado == tecnico.id ? 'selected' : '' %>><%= tecnico.nombres + ' ' + tecnico.apellidos %></option>
              <% }) %>
            </select>
          </div>

          <!-- Tipo de Problema -->
          <div class="col-md-3">
            <label for="tipoProblemaFiltro" class="form-label">Tipo de Problema</label>
            <select class="form-select" id="tipoProblemaFiltro" name="problema">
              <option value="">Todos</option>
              <% tiposProblema.forEach(tipo => { %>
                <option value="<%= tipo %>" <%= problemaSeleccionado === tipo ? 'selected' : '' %>><%= tipo %></option>
              <% }) %>
            </select>
          </div>

          <!-- Fechas -->
          <div class="col-md-3">
            <label for="fechaInicio" class="form-label">Fecha Inicio</label>
            <input type="date" id="fechaInicio" name="fechaInicio" class="form-control" value="<%= fechaInicio %>" />
          </div>
          <div class="col-md-3">
            <label for="fechaFin" class="form-label">Fecha Fin</label>
            <input type="date" id="fechaFin" name="fechaFin" class="form-control" value="<%= fechaFin %>" />
          </div>

          <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-search"></i> Buscar
            </button>
            <a href="/tickets" class="btn btn-secondary">
              <i class="bi bi-x-circle"></i> Limpiar
            </a>
          </div>
        </form>

        <a href="/tickets/create" class="btn btn-primary mb-3">
                

          <i class="bi bi-plus-circle"></i> Nuevo Ticket
        </a>
           <br><br><br>

        <!-- ... encabezado, navbar y filtros arriba sin cambios ... -->

<h2>Listado de Tickets</h2>

<div class="table-responsive">
  <table class="table table-bordered table-hover align-middle">
    <thead class="table-dark">
      <tr>
        <th>N° Ticket</th>
        <th>Cliente</th>
        <th>Cédula</th>
        <th>Técnico</th>
        <th>Tipo de Problema</th>
        <th>Descripción</th>
        <th>Solución</th>
        <th>Prioridad</th> <!-- Nueva columna -->
        <th>Estado</th>
        <th>Fecha de Creación</th>
        <th>Fecha de Solución</th>
        <th>Hora de Solución</th>
        <th>Hora de Visita</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% tickets.forEach(ticket => { %>
        <tr>
          <td><%= ticket.ticketNumber %></td>
          <td><%= ticket.client ? ticket.client.nombre + ' ' + ticket.client.apellido : 'Cliente no asignado' %></td>
          <td><%= ticket.client ? ticket.client.cedula : 'Sin cédula' %></td>
          <td><%= ticket.tecnico ? ticket.tecnico.nombres + ' ' + ticket.tecnico.apellidos : 'Sin técnico' %></td>
          <td><%= ticket.issueType %></td>
          <td><%= ticket.description.length > 50 ? ticket.description.substring(0, 50) + '...' : ticket.description %></td>
          <td><%= ticket.solution ? (ticket.solution.length > 50 ? ticket.solution.substring(0, 50) + '...' : ticket.solution) : 'Sin solución' %></td>

          <!-- Prioridad con colores -->
          <td>
            <span class="badge 
              <%= ticket.priority === 'Alta' ? 'bg-danger' : 
                  ticket.priority === 'Media' ? 'bg-warning text-dark' : 
                  'bg-success' %>">
              <%= ticket.priority %>
            </span>
          </td>

          <!-- Estado -->
          <td>
            <span class="badge <%= ticket.status === 'cerrado' ? 'bg-success' : ticket.status === 'completado' ? 'bg-secondary' : ticket.status === 'abierto' ? 'bg-warning text-dark' : '' %>">
              <%= ticket.status.replace('_', ' ') %>
            </span>
          </td>

          <td><%= new Date(ticket.createdAt).toLocaleDateString('es-EC', { timeZone: 'America/Guayaquil' }) %></td>
          <td><%= ticket.solutionDate || '—' %></td>
          <td><%= ticket.solutionTime || '—' %></td>
          <td><%= ticket.horaVisita || '—' %></td>

          <td>
            <div class="acciones-container">
              <a href="/tickets/<%= ticket.id %>" class="btn-accion info" title="Ver">
                <i class="bi bi-eye"></i>
              </a>
              <a href="/tickets/<%= ticket.id %>/edit" class="btn-accion warning" title="Editar">
                <i class="bi bi-pencil"></i>
              </a>
              
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

    </main>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>