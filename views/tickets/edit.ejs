<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>ZULCOM - Administrador - Editar Ticket #<%= ticket.ticketNumber %></title>
  <link rel="stylesheet" href="/css/dashboard/navbar.css" />
  <link rel="stylesheet" href="/css/dashboard/dashboard.css" />
  <link rel="stylesheet" href="/css/tickets/create.css" />
</head>
<body>
  <div class="dashboard-container">
    <%- include('../partials/navadministrador') %>

    <main class="main-content">
      <header class="content-header">
        <h1>PANEL ADMINISTRATIVO</h1>
        <div class="user-actions">
          <div>
            <a href="/auth/change-password"><img src="/img/logo-perfil.png" alt="Logo Perfil" class="img-perfil" /></a>
          </div>
          <% if (user && user.nombres && user.apellidos) { %>
            <span class="user-name">Administrador: <%= user.nombres %> <%= user.apellidos %></span>
          <% } %>
          <a href="/auth/logout" class="logout-btn" onclick="return confirm('¿Estás seguro de cerrar sesión?')">Cerrar Sesión</a>
        </div>
      </header>

      <div class="dashboard-content">
        <div class="container mt-4">
          <h1 class="mb-4">Editar Ticket #<%= ticket.ticketNumber %></h1>

          <form action="/tickets/<%= ticket.id %>?_method=PUT" method="POST">
            <!-- Cédula del cliente -->
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="cedula">Cédula del Cliente</label>
                  <input type="text" class="form-control" id="cedula" name="cedula" 
                         value="<%= ticket.client.cedula %>" readonly />
                </div>
              </div>
            </div>

            <!-- Información del cliente -->
            <div id="clientInfo" class="card mb-3">
              <div class="card-body">
                <h5 class="card-title">Información del Cliente</h5>
                <div class="row">
                  <div class="col-md-6">
                    <p><strong>Nombre:</strong> <%= ticket.client.nombre %> <%= ticket.client.apellido %></p>
                    <p><strong>Teléfono:</strong> <%= ticket.client.telefono1 %></p>
                  </div>
                  <div class="col-md-6">
                    <p><strong>Correo:</strong> <%= ticket.client.correo %></p>
                    <p><strong>Dirección:</strong> <%= ticket.client.direccion %></p>
                  </div>
                </div>
                <input type="hidden" id="clientId" name="clientId" value="<%= ticket.clientId %>" />
              </div>
            </div>

            <!-- Tipo de problema y prioridad -->
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="issueType">Tipo de Problema</label>
                  <select class="form-control" id="issueType" name="issueType" required>
                    <option value="Revisión General" <%= ticket.issueType === 'Revisión General' ? 'selected' : '' %>>Revisión General</option>
                    <option value="Revisión de Fibra Óptica" <%= ticket.issueType === 'Revisión de Fibra Óptica' ? 'selected' : '' %>>Revisión de Fibra Óptica</option>
                    <option value="Instalación de Fibra Óptica" <%= ticket.issueType === 'Instalación de Fibra Óptica' ? 'selected' : '' %>>Instalación de Fibra Óptica</option>
                    <option value="Cambio de domicilio " <%= ticket.issueType === 'Cambio de domicilio ' ? 'selected' : '' %>>Cambio de domicilio</option>
                    <option value="Otro" <%= ticket.issueType === 'Otro' ? 'selected' : '' %>>Otro</option>
                  </select>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label for="priority">Prioridad</label>
                  <select class="form-control" id="priority" name="priority" required>
                    <option value="Alta" <%= ticket.priority === 'Alta' ? 'selected' : '' %>>Alta</option>
                    <option value="Media" <%= ticket.priority === 'Media' ? 'selected' : '' %>>Media</option>
                    <option value="Baja" <%= ticket.priority === 'Baja' ? 'selected' : '' %>>Baja</option>
                  </select>
                </div>
              </div>

              <!-- Asignar Técnico -->
              <div class="col-md-6">
                <div class="form-group">
                  <label for="tecnicoId">Asignar Técnico</label>
                  <select class="form-control" id="tecnicoId" name="tecnicoId" required>
                    <option value="">Seleccione un técnico</option>
                    <% tecnicos.forEach(tecnico => { %>
                      <option value="<%= tecnico.id %>" <%= ticket.tecnicoId == tecnico.id ? 'selected' : '' %>>
                        <%= tecnico.nombres + ' ' + tecnico.apellidos %>
                      </option>
                    <% }) %>
                  </select>
                </div>
              </div>
            </div>

            <!-- Descripción -->
            <div class="form-group">
              <label for="description">Descripción del Problema</label>
              <textarea class="form-control" id="description" name="description" rows="5" required><%= ticket.description %></textarea>
            </div>

            <!-- Hora de la Visita -->
            <div class="form-group">
              <label for="horaVisita">Hora de la Visita</label>
              <input
                type="time"
                class="form-control"
                id="horaVisita"
                name="horaVisita"
                value="<%= ticket.horaVisita ? ticket.horaVisita : '' %>"
                required
              />
            </div>

            <!-- Botones -->
            <div class="form-group text-right">
              <button type="submit" class="btn btn-primary px-4">
                <i class="fas fa-save mr-2"></i>Actualizar Ticket
              </button>
              <a href="/tickets" class="btn btn-outline-secondary px-4 ml-2">
                <i class="fas fa-times mr-2"></i>Cancelar
              </a>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
</body>
</html>
